<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:width="18dp" android:height="18dp">
                <shape android:shape="rectangle">
                    <corners android:radius="9dp"/>
                    <stroke android:width="2dp" android:color="@color/light_gray" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:width="18dp" android:height="18dp" >
                <shape android:shape="rectangle">
                    <corners android:radius="9dp"/>
                    <stroke android:width="1dp" android:color="@color/white" />
                </shape>
            </item>
            <item android:width="16dp" android:height="16dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp"/>
                    <stroke android:width="2dp" android:color="#FF0000" />
                </shape>
            </item>

            <item android:width="12dp" android:height="12dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <corners android:radius="6dp"/>
                    <stroke android:width="1dp" android:color="@color/white" />
                </shape>
            </item>

            <item android:width="10dp" android:height="10dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp"/>
                    <solid android:color="@color/orange"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>